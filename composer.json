{
    "name": "projek-xyz/slim-plates",
    "description": "Render your Slim 3 application views using Plates template engine.",
    "keywords": ["slim", "microframework", "framework", "view", "template", "plates", "library"],
    "homepage": "http://www.projek.xyz/slim-plates",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fery Wardiyanto",
            "email": "feryardiyanto@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/projek-xyz/slim-plates/issues",
        "source": "https://github.com/projek-xyz/slim-plates"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c tests/phpunit.xml",
        "lint": "./vendor/bin/phpcs --standard=PSR2  -n -p src/"
    },
    "autoload": {
        "psr-4": {
            "Projek\\Slim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Projek\\Slim\\Tests\\": "tests/src/"
        }
    },
    "require": {
        "league/plates": "~3.1",
        "slim/slim": "~3.5 || ~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~2.7"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    }
}
